[zone_witches_galantine]
script_binding      = bind_anomaly.init
GroupControlSection	= spawn_group_zone
$spawn 			= "zones\witches galantine"
$prefetch 		= 16
class			= ZS_MBALD
hit_impulse_scale	= .3
effective_radius	= 0.75 ;размер радиуса в процентах от оригинального, где действует зона
sound			= zone_mosquito_bald
postprocess		= postprocess_electra

ef_anomaly_type			= 1
ef_weapon_type			= 13

artefacts		= af_electra_sparkler,0.3, af_electra_flash, 0.2, af_electra_moonlight, 0.1
BirthProbability = 0.02

;----------- Anomaly settings -----------------------
min_start_power		= 5.99
max_start_power		= 10.00
attenuation			= 1
period				= 1
min_artefact_count	= 0
max_artefact_count	= 1

idle_particles		= anomaly2\electra_idle
blowout_particles	= anomaly2\electra2_blast

hit_small_particles			= anomaly2\electra_entrance_small
hit_big_particles			= anomaly2\electra_damage_02_smoke
idle_small_particles		= anomaly2\electra_damage_01_smoke
idle_big_particles			= anomaly2\electra_damage_02_smoke
entrance_small_particles	= anomaly2\electra_entrance_small
entrance_big_particles		= anomaly2\emi_entrance_big_00

idle_sound			= anomaly\electra_idle1; anomaly_gravy_idle
blowout_sound		= anomaly\electra_blast1
hit_sound			= anomaly\electra_hit
entrance_sound		= anomaly\electra_hit

blowout_light		= on
light_color		    = 0.8,0.9,1
light_range		    = 30.0
light_time 		    = 1;0.35
light_height		= 1.5			;подъем источника света на высоту

idle_light			= off

hit_type		= shock

disable_time		= 50	;время игнорирования неживого объекта в зоне (-1 если не нужно)
disable_time_small	= 500		;время игнорирования маленького неживого объекта в зоне (-1 если не нужно)
disable_idle_time	= 100	;время отключения idle партиклов

awaking_time		= 100
blowout_time		= 1000	
accamulate_time		= 1000

ignore_nonalive		= false
ignore_small		= false
ignore_artefacts	= true

visible_by_detector = on

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; ветер
blowout_wind		= off

blowout_wind_time_start     = 0
blowout_wind_time_peak      = 150
blowout_wind_time_end		= 299
blowout_wind_power			= 0.2			;сила поднимаего ветра (от 0 до 1), в момент blowout_wind_time_peak 

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;рождение артефактов во время срабатывания
spawn_blowout_artefacts = on ; главный переключатель возможности рождения
artefact_spawn_probability = 0.2 ;вероятность, что во время срабатывания аномалии будет рожден артефакт

; добавленные мной (Bak)
birth_on_death_probability = 0.2 ; вероятность рождения артефакта после смерти существа в аномалии
birth_on_torn_probability = 0.2 ; вероятность рождения артефакта при разрыве тела в мясорубке

birth_on_nonalive = false ; возможность рождения при срабатывании на предмет
birth_on_alive = false ; возможность рождения при срабатывании на живое существо
birth_on_dead = true ; возможность рождения при срабатывании на труп
throw_out_power = 150			;импульс с которым артефакт будет выброшен из зоны в произвольном направлении
artefact_spawn_height = 3	;(м) высота на центром зоны где будет рожден артефакт



