
[zone_rusty_hair]
GroupControlSection	= spawn_group_zone
$spawn 			= "zones\rusty hair"
;$prefetch 		= 16
class			= Z_RUSTYH
visual			= physics\anomaly\anomaly_liana

ef_anomaly_type			= 7
ef_weapon_type			= 19

hit_impulse_scale	= 0.5
effective_radius	= 0.75 ;размер радиуса в процентах от оригинального, где действует зона
sound			= zone_mosquito_bald
postprocess		= postprocess_new

artefacts		= af_rusty_thorn,0.7,af_rusty_kristall,0.25,af_rusty_sea-urchin,0.05
BirthProbability = 0.2

;----------- Anomaly settings -----------------------
min_start_power		= 0.99
max_start_power		= 1.00
attenuation			= 1
period				= 1
min_artefact_count	= 0
max_artefact_count	= 1

hit_type		= shock

disable_time		= -1	;время игнорирования неживого объекта в зоне (-1 если не нужно)
disable_time_small	= 500		;время игнорирования маленького неживого объекта в зоне (-1 если не нужно)
disable_idle_time	= -1	;время отключения idle партиклов

ignore_nonalive		= false;
ignore_small		= false;
ignore_artefacts	= true

awaking_time				= 500
blowout_time				= 1000	
accamulate_time				= 5000

attack_animation_start		= 0
attack_animation_end		= 1000

blowout_light		= off
idle_light			= off

visible_by_detector = on

blowout_wind		= off

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;рождение артефактов во время срабатывания
spawn_blowout_artefacts = on ; главный переключатель возможности рождения
artefact_spawn_probability = 0.3 ;вероятность, что во время срабатывания аномалии будет рожден артефакт

; добавленные мной (Bak)
birth_on_death_probability = 0.3 ; вероятность рождения артефакта после смерти существа в аномалии
birth_on_torn_probability = 0.3 ; вероятность рождения артефакта при разрыве тела в мясорубке

birth_on_nonalive = false ; возможность рождения при срабатывании на предмет
birth_on_alive = true ; возможность рождения при срабатывании на живое существо
birth_on_dead = true ; возможность рождения при срабатывании на труп
